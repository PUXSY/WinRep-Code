<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <Style x:Key="BackButtonStyle" TargetType="Button" >  
        <Setter Property="Width" Value="60"/>  
        <Setter Property="Height" Value="24"/>  
        <Setter Property="Background" Value="#2a1f1a"/>  
        <Setter Property="BorderBrush" Value="Transparent"/>  
        <Setter Property="Foreground" Value="#f4ddb5"/>  
        <Setter Property="Padding" Value="0"/>  
        <Setter Property="Cursor" Value="Hand"/>  
        <Setter Property="Template">  
            <Setter.Value>      
                <ControlTemplate TargetType="Button">  
                    <Grid Background="Transparent">  
                        <Image Source="/Assets/Icons/arrow_back_ios_24dp_E3E3E3_FILL0_wght400_GRAD0_opsz24.png" 
                               Width="16" Height="16" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0"/>  
                        
                        <TextBlock  
                            Text="Back"  
                            FontSize="16"
                            FontWeight="SemiBold"  
                            Foreground="{TemplateBinding Foreground}"
                            VerticalAlignment="Center"  
                            HorizontalAlignment="Center" 
                            Margin="0,-2,-10,0"/>  
                    </Grid>  
                </ControlTemplate>  
            </Setter.Value>  
        </Setter>  
    </Style>  
</ResourceDictionary>
