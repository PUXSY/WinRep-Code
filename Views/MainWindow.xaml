<Window x:Class="WinRep_Code.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinRep_Code"
        mc:Ignorable="d"
        Title="MainWindow" 
        Width="770" Height="430" 
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">

    <Border Background="#121214" 
            CornerRadius="15">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" 
                          Grid.Row="1" 
                          HorizontalAlignment="Right" 
                          Margin="0,5,10,0">

            </StackPanel>

            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal" >

                <Button Content="Tweaks" 
                        Command="{Binding NavigateToTweaksCommand}" />
                
                <Button Content="Install" 
                        Command="{Binding NavigateToInstallCommand}" />
                
                <Button Content="Scan" 
                        Command="{Binding NavigateToScanCommand}" />
            </StackPanel>

            <ContentControl Grid.Row="2"
                             Content="{Binding NavService.CurrentViewModel}"
                             Margin="10,0,10,10"
                             Background="#1E1E1E"
                             BorderBrush="#333333"
                             BorderThickness="1" />

        </Grid>
    </Border>

</Window>
