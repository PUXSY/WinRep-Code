<Window x:Class="WinRep_Code.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinRep_Code"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="1385" Height="755"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">

    <Border Background="#1E1E1E" 
            CornerRadius="12" 
            BorderBrush="#333"
            BorderThickness="1"
            MouseDown="TitleBar_MouseDown">

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="75" />
                <RowDefinition Height="678" />
            </Grid.RowDefinitions>
            
            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal" 
                        Grid.Row="1" 
                        Margin="0,10,5,0">

                <Button Content="−" 
                        Width="50" Height="30"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource MinimizeButtonStyle}" 
                        Background="#FF1E1E1E"
                        Foreground="White"
                        BorderBrush="#FF333333"
                        BorderThickness="1" 
                        Margin="0,0,5,0"
                        Click="MinimizeWindow"/>

                <Button Content="X" 
                        Width="50" Height="30"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource CloseButtonStyle}" 
                        Background="#FF1E1E1E"
                        Foreground="White"
                        BorderBrush="#FF333333"
                        BorderThickness="1" 
                        Margin="0,0,5,0"
                        Click="CloseWindow"/>
            </StackPanel>


            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        Margin="0,2,0,0">

                <RadioButton Content="Tweaks" 
                             Command="{Binding NavigateToTweaksCommand}"
                             Style="{StaticResource NavigationButtonStyle}" 
                             Height="40" Width="140"
                             Margin="25,0,0,0" />

                <RadioButton Content="Install" 
                             Command="{Binding NavigateToInstallCommand}"
                             Style="{StaticResource NavigationButtonStyle}" 
                             Height="40" Width="140"
                             Margin="15,0,0,0"  />

                <RadioButton Content="Scan" 
                             Command="{Binding NavigateToScanCommand}" 
                             Style="{StaticResource NavigationButtonStyle}" 
                             Height="40" Width="140"
                             Margin="15,0,0,0"  />
            </StackPanel>
            <ContentControl Grid.Row="2"
                             Content="{Binding NavService.CurrentViewModel}"
                             Margin="10,0,10,10"
                             Background="#1E1E1E"
                             BorderBrush="#333333"
                             BorderThickness="1" />

        </Grid>
    </Border>

</Window>
